<!DOCTYPE html>
<head lang="en">
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="/favicon.ico">

  <title>{+title}Igo running{/title}</title>

  <link rel="stylesheet" href="/styles.css?fp={>"css.fingerprint" /}" />

</head>

<body>

  <div class="container">
    <div class="header clearfix">

      <nav class="navbar navbar-dark bg-primary">
        <a class="navbar-brand" href="#">
          Exercie NodeJs <small>aybezz</small>
        </a>
        <ul class="nav navbar-nav pull-right">
          {#user}
            <li class="nav-item"><a class="nav-link" href="/clients/create_order_step1">Nouveau Appel</a></li>
            <li class="nav-item"><a class="nav-link" href="/clients">Clients</a></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="/" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                {name}
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a class="dropdown-item" href="/logout">
                  <i class="fa fa-power-off" aria-hidden="true"></i>
                  Logout
                </a>
              </div>
            </li>
          {:else}
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          {/user}
        </ul>
      </nav>
    </div>

    <div class="row">
      <div class="col-lg-12">

        {#errors}
          <div class="alert alert-danger">{msg}</div>
        {/errors}

        {#flash.success_msg}
          <div class="alert alert-success">{flash.success_msg}</div>
        {/flash.success_msg}

        {#flash.error_msg}
          <div class="alert alert-danger">{flash.error_msg}</div>
        {/flash.error_msg}

        {#flash.error}
          <div class="alert alert-danger">{flash.error}</div>
        {/flash.error}

        {+bodyContent /}
      </div>
    </div>
  </div> <!-- /container -->

  <footer>
    {+pageFooter /}
  </footer>

  <script src="/main.js?fp={>"js.fingerprint" /}" ></script>
</body>
